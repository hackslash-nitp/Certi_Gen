<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="5dp"
    android:background="@drawable/folder_recycler_item_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/certificate_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/folderrecycleritemicon" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/certificate_image"
        android:background="#c1c1c1"/>

    <TextView
        android:id="@+id/folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/certificate_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:gravity="center|start"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="50dp"
        android:text="Folder Name"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/folder_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/certificate_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:gravity="center|start"
        android:maxLines="2"
        android:textColor="#c1c1c1"
        android:layout_marginTop="28dp"
        android:paddingEnd="3dp"
        android:layout_marginEnd="50dp"
        android:text="Folder Name ddddd dddd dddff fffff fff ffff ffff ffff ffff ff ffff ffdd"
        android:textSize="13sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/certificate_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/folder_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:text="29.59Kb"
            android:paddingTop="2dp"
            android:gravity="start|center"
            android:textSize="13sp"
            android:textColor="#b6b4aa"/>
        <TextView
            android:id="@+id/folder_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:text="22 July 2019"

            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/folder_no_of_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:text="290 items"

            android:gravity="end|center"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:textSize="13sp"
            android:textColor="#b6b4aa"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_selected"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="10dp" />
    <LinearLayout
        android:id="@+id/rightlinearlayout"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:background="@drawable/roundcornerrightfolder"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/folder_share_button"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/roundcornerrighttopfolder"
            android:src="@drawable/shareicon"
            android:padding="9dp"
            android:elevation="2dp"/>
        <ImageView
            android:id="@+id/folder_delete"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/roundcornerrightbottomfolder"
            android:layout_marginEnd="2dp"
            android:elevation="2dp"
            android:src="@drawable/deleteicon"
            android:padding="9dp" />
    </LinearLayout>

</RelativeLayout>