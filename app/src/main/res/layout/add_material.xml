<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top">

    <ImageView
        android:id="@+id/template_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"

        android:background="@drawable/folder_recycler_item_background"
        android:elevation="4dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/add_image_background">

        <ImageView
            android:id="@+id/sign_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/folder_recycler_item_background" />

        <Button
            android:id="@+id/add_signature"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/add_image_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="ADD SIGNATURE"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/add_image_background">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/folder_recycler_item_background"/>

        <Button
            android:id="@+id/add_sheet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/add_image_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="ADD EXCEL SHEET"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/date_text"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"


        android:background="#ffffff"
        android:elevation="2dp"
        android:gravity="center"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="25dp"
            android:background="@drawable/add_image_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:background="@drawable/add_image_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="OK"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>